{

  "manifest_version": 2,

  "name": "Positionable!",
  "description": "An extension for spriting and positioning elements.",
  "version": "1.0.16",

  "icons": {
    "16":  "images/app/16.png",
    "32":  "images/app/32.png",
    "48":  "images/app/48.png",
    "128": "images/app/128.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "images/app/16.png",
    "default_title": "Positionable!"
  },

  "web_accessible_resources": [
    "*.html",
    "*.css",
    "images/*"
  ]

}
